@{
    ViewData["Title"] = "Informacion";
}

<script>
    function alerta(){
        alert("Datos de contacto del sistema");
    }

    function getHora() {
        let url = "@Url.Action("horaserver", "Home")";
        fetch(url)
            .then(response => response.json())
            .then(data => alert(data));
    }
</script>

<style>
    p{
        color: gray;
        font-size:medium;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

</style>

<h1>Informacion</h1>
<div>
    <p>Esta pagina contiene informacion del sistema</p>
    <button onclick="alerta()">Aceptar</button>
    <button onclick="getHora()">Hora</button>
</div>